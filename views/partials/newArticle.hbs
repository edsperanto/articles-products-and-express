<div class='item'>
	{{!-- <p class='name'></p> --}}
	<ul class='details'>
		<form action="/articles" method='POST' id='form'>
			<table>
				<tr id='error' style='display: none;'>
					<td style='color: red;'>Error:</td>
					<td class='detail-data' id='err-msg' style='color: red; border-width: 0;'>Only [0-9], [a-Z], and spaces are allowed</td>
				</tr>
				<tr>
					<td>Title</td>
					<td class='detail-data'><input type='text' name='title' id='title'></td>
				</tr>
				<tr>
					<td>Author</td>
					<td class='detail-data'><input type='text' name='author' id='author'></td>
				</tr>
				<tr>
					<td>Body</td>
					<td class='detail-data'><input type='text' name='body' id='body'></td>
				</tr>
			</table>
		</form>
	</ul>
</div>
<script>
	let title = document.getElementById('title');
	let author = document.getElementById('author');
	let body = document.getElementById('body');
	let form = document.getElementById('form');
	toSaveArticle.addEventListener('click', () => {
		let titleFilled = title.value !== '';
		let authorFilled = author.value !== '';
		let bodyFilled = body.value !== '';
		if(titleFilled && authorFilled && bodyFilled) {
			form.submit();
		}else{
			document.getElementById('err-msg').innerText = 'Please complete all fields';
			document.getElementById('error').style.display = 'table-row';
		}
	});
	{{#if err}}
		document.getElementById('error').style.display = 'table-row';
	{{/if}}
</script>